@model IEnumerable<SecondHandPlatform.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-5 bg-light rounded">
    <h1 class="display-4 text-success">
        <i class="bi bi-shop"></i> Welcome to SecondHand Platform
    </h1>
    <p class="lead">Buy and sell second-hand items easily and securely!</p>
    
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg me-2">
                <i class="bi bi-person-plus"></i> Join Now
            </a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success btn-lg">
                <i class="bi bi-eye"></i> Browse Products
            </a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <a asp-controller="Products" asp-action="Create" class="btn btn-success btn-lg me-2">
                <i class="bi bi-plus-circle"></i> Sell Item
            </a>
            <a asp-controller="Products" asp-action="MyProducts" class="btn btn-outline-success btn-lg">
                <i class="bi bi-box"></i> My Products
            </a>
        </div>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="mt-5">
        <h3 class="mb-4">
            <i class="bi bi-fire"></i> Latest Products
        </h3>
        <div class="row">
            @foreach (var product in Model.Take(8))
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@product.ImagePath" class="card-img-top product-image" alt="@product.Title">
                        }
                        else
                        {
                            <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                                <i class="bi bi-image text-muted" style="font-size: 48px;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">
                                @(product.Description.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)
                            </p>
                            <h6 class="text-success fw-bold">@product.Price.ToString("C")</h6>
                            <small class="text-muted">
                                <i class="bi bi-tag"></i> @product.Category.Name
                            </small>
                        </div>
                        <div class="card-footer bg-white">
                            <a href="/Products/Details/@product.Id" class="btn btn-outline-success btn-sm w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-3">
            <a asp-controller="Products" asp-action="Index" class="btn btn-success">
                <i class="bi bi-grid"></i> View All Products
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-box-seam" style="font-size: 64px; color: #ccc;"></i>
        <h4 class="mt-3">No products available yet</h4>
        <p class="text-muted">Be the first to add a product!</p>
    </div>
}
@model IEnumerable<SecondHandPlatform.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<div class="container mt-4">
    <h2><i class="bi bi-box-seam"></i> Manage Products</h2>
    <p class="text-muted">Admin management of all products in the system</p>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-success">
                    <tr>
                        <th>ID</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Seller</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>
                                <strong>@product.Title</strong><br>
                                <small class="text-muted">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</small>
                            </td>
                            <td class="fw-bold text-success">@product.Price.ToString("C")</td>
                            <td>
                                <span class="badge bg-secondary">@product.Category.Name</span>
                            </td>
                            <td>
                                <small>@product.User.FullName<br>
                                @product.User.Email</small>
                            </td>
                            <td>
                                <small>@product.UploadDate.ToString("MM/dd/yyyy")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-sm btn-outline-info" target="_blank">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form asp-action="DeleteProduct" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this product?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No products found in the system.
        </div>
    }
</div>
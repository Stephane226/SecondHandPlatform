@model SecondHandPlatform.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 500px; object-fit: contain;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="bi bi-image text-muted" style="font-size: 64px;"></i>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-success fw-bold">@Model.Price.ToString("C")</h3>
                        <span class="badge bg-secondary">@Model.Category.Name</span>
                    </div>
                    
                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="card-text">@Model.Description</p>
                    </div>
                    
                    <hr>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><i class="bi bi-person"></i> Seller Information</h6>
                            <p class="mb-1"><strong>Name:</strong> @Model.User.FullName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.User.Email</p>
                            @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                            {
                                <p class="mb-0"><strong>Phone:</strong> @Model.User.PhoneNumber</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-info-circle"></i> Product Details</h6>
                            <p class="mb-1"><strong>Posted:</strong> @Model.UploadDate.ToString("MMMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Category:</strong> @Model.Category.Name</p>
                            <p class="mb-0"><strong>Product ID:</strong> @Model.Id</p>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.User.Email)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Edit Product
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>